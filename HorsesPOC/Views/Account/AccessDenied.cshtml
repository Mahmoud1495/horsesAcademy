@using System.Security.Claims

@{
    ViewData["Title"] = "Access Denied";
    
    var userType = User.FindFirst("UserType")?.Value;
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3 text-center">
                <div class="card-body p-4">
                    <div class="mb-4">
                        <i class="bi bi-shield-lock text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h3 class="card-title text-danger mb-3">Access Denied</h3>
                    <p class="text-muted mb-4">
                        You do not have permission to view this page. Please contact your administrator if you believe this is an error.
                    </p>
                    @if (userType == "Admin")
                    {
                        <form asp-controller="StablesControllers" asp-action="Index" method="post" class="d-inline ">
                            <button type="submit" class="btn btn-primary btn-lg me-2"> <i class="bi bi-house"></i> Back to Home</button>
                        </form>
                    }
                    else
                    {
                        <form asp-controller="Home" asp-action="Index" method="post" class="d-inline ">
                            <button type="submit" class="btn btn-primary btn-lg me-2"> <i class="bi bi-house"></i> Back to Home</button>
                        </form>
                    }

                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline ">
                        <button type="submit" class="btn btn-outline-danger btn-lg me-2"><i class="bi bi-box-arrow-right"></i> Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
}
