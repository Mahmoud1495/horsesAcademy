@model HorsesPOC.Models.Domain.TrainingTracker

<h2>Training Session Details</h2>

<dl class="row">
	<dt class="col-sm-2">Trainee</dt>
	<dd class="col-sm-10">@Model.Trainee?.Name</dd>

	<dt class="col-sm-2">Horse</dt>
	<dd class="col-sm-10">@Model.Horse?.Name</dd>

	<dt class="col-sm-2">Start</dt>
	<dd class="col-sm-10">@Model.StartTime</dd>

	<dt class="col-sm-2">End</dt>
	<dd class="col-sm-10">@Model.EndTime</dd>

	<dt class="col-sm-2">Duration (min)</dt>
	<dd class="col-sm-10">@Model.ActualTrainingInMin</dd>

	<dt class="col-sm-2">Stage</dt>
	<dd class="col-sm-10">@Model.Stage</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
