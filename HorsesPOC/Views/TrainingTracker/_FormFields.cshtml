@model HorsesPOC.Models.Domain.TrainingTracker

<div class="form-group mb-3">
	<label asp-for="TraineeId" class="form-label">Trainee</label>
	<select asp-for="TraineeId" class="form-control" asp-items="@(new SelectList(ViewBag.Trainees, "ID", "Name"))">
		<option value="">-- Select Trainee --</option>
	</select>
</div>

<div class="form-group mb-3">
	<label asp-for="HorseId" class="form-label">Horse</label>
	<select asp-for="HorseId" class="form-control" asp-items="@(new SelectList(ViewBag.Horses, "ID", "Name"))">
		<option value="">-- Select Horse --</option>
	</select>
</div>

<div class="form-group mb-3">
	<label asp-for="StartTime" class="form-label"></label>
	<input asp-for="StartTime" class="form-control" type="datetime-local" />
</div>

<div class="form-group mb-3">
	<label asp-for="EndTime" class="form-label"></label>
	<input asp-for="EndTime" class="form-control" type="datetime-local" />
</div>

<div class="form-group mb-3">
	<label asp-for="ActualTrainingInMin" class="form-label"></label>
	<input asp-for="ActualTrainingInMin" class="form-control" type="number" />
</div>

<div class="form-group mb-3">
	<label asp-for="Stage" class="form-label"></label>
	<select asp-for="Stage" class="form-control" asp-items="Html.GetEnumSelectList<HorsesPOC.Enums.SessionStage>()"></select>
</div>
