@model HorsesPOC.Models.Domain.TrainingTracker

<h2>Delete Training Session</h2>

<div>
	<h4>Are you sure you want to delete this session?</h4>
	<dl class="row">
		<dt class="col-sm-2">Trainee</dt>
		<dd class="col-sm-10">@Model.Trainee?.Name</dd>

		<dt class="col-sm-2">Horse</dt>
		<dd class="col-sm-10">@Model.Horse?.Name</dd>

		<dt class="col-sm-2">Start</dt>
		<dd class="col-sm-10">@Model.StartTime</dd>
	</dl>
</div>

<form asp-action="Delete" method="post">
	<input type="hidden" asp-for="Id" />
	<button type="submit" class="btn btn-danger">Delete</button>
	<a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
