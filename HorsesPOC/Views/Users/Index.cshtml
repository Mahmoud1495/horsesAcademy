@model IEnumerable<HorsesPOC.Models.Domain.user>
@{
    ViewData["Title"] = "Users";
}

<h2>Users</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Add User</a>

<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th>Name</th>
            <th>Username</th>
            <th>Phone</th>
            <th>NID</th>
            <th>User Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.UserName</td>
                <td>@user.PhoneNumber</td>
                <td>@user.NID</td>
                <td>@user.UserType</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
