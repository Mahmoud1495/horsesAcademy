@model IEnumerable<HorsesPOC.Models.Domain.user>
@{
    ViewData["Title"] = "Users";
}

<h2 class="mb-3">Users</h2>

<a asp-action="Create" class="btn btn-success mb-3">
    <i class="bi bi-person-plus"></i> Add User
</a>

<div class="table-responsive">
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Username</th>
                <th>Phone</th>
                <th>NID</th>
                <th>User Type</th>
                <th class="text-center" style="width:200px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.UserName</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.NID</td>
                        <td>@user.UserType</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">
                        No users found.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
