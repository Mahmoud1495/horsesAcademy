@model IEnumerable<HorsesPOC.Models.Domain.Trainee>

@{
    ViewData["Title"] = "Trainees";
    var stableId = User.FindFirst("StableID")?.Value;
}

<h2 class="mb-3">Trainees</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" asp-route-StableID="@stableId" class="btn btn-primary">
        <i class="bi bi-person-plus-fill me-1"></i> Add New Trainee
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Phone</th>
                    <th>Stable</th>
                    <th>QR Code</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Age</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Stable?.Name</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.QRCode))
                            {
                                <a href="@item.QRCode"
                                   download="@($"TraineeQR-{item.Name.Replace(" ", "_")}.png")">
                                    <img src="@item.QRCode" class="img-thumbnail" style="max-width:60px;" alt="QR Code" />
                                </a>
                            }
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-1"></i> No trainees found. You can add one using the button above.
    </div>
}

