@model HorsesPOC.Models.Domain.Trainee


@{
    var hasStableId = Model.StableID != Guid.Empty && Model.StableID != null;
}

<div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Age"></label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" class="form-control" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>

<!-- Optional Stable dropdown -->
@if (ViewBag.Stables != null)
{
    <div class="form-group">
        <label asp-for="StableID" class="control-label">Stable</label>
        @if (hasStableId)
        {
            <!-- Read-only dropdown -->
            <select asp-for="StableID" class="form-control" asp-items="@(new SelectList(ViewBag.Stables, "ID", "Name", Model.StableID))" disabled></select>
            <!-- Hidden input so value still posts -->
            <input type="hidden" asp-for="StableID" />
        }
        else
        {
            <!-- Normal dropdown -->
            <select asp-for="StableID" class="form-control" asp-items="@(new SelectList(ViewBag.Stables, "ID", "Name"))"></select>
        }
    </div>
}
