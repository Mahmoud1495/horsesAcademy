@model HorsesPOC.Models.Domain.Trainee

@{
    ViewData["Title"] = "Trainee Details";
}

<h2>Trainee Details</h2>

<div class="card p-3">
    <dl class="row mb-0">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Stable</dt>
        <dd class="col-sm-10">@Model.Stable?.Name</dd>
    </dl>

    @if (!string.IsNullOrEmpty(Model.QRCode))
    {
        <div class="mt-3">
            <label>QR Code</label><br />
            <a href="@Model.QRCode" download="@($"TraineeQR-{Model.Name}.png")">
                <img src="@Model.QRCode" alt="QR Code" width="150" style="cursor: pointer;" />
            </a>
            <p class="text-muted small mt-1">Click the QR code to download</p>
        </div>
    }
</div>

<p class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>
