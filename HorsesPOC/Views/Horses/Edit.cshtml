@model HorsesPOC.Models.Domain.Horse

@{
    ViewData["Title"] = "Edit Horse";
}

<h2 class="mb-3">Edit Horse</h2>

<form asp-action="Edit" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ID" />

    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

    <div class="card shadow-sm">
        <div class="card-body">
            @Html.Partial("_FormFields", Model)
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center">
            <div class="text-muted small">
                Last updated: @DateTime.Now.ToString("yyyy-MM-dd HH:mm")
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Update
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Cancel
                </a>
            </div>
        </div>
    </div>
</form>
