@model HorsesPOC.Models.Domain.Horse

@{
    var hasStableId = Model.StableID != Guid.Empty && Model.StableID != null;
}

<div class="container">
    <div class="row">
        <div class="col-md-3 mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3">
            <label asp-for="Gender"></label>
            <select asp-for="Gender" class="form-control" asp-items="ViewBag.GenderList">
                <option value="">-- Select Gender --</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="col-md-3 mb-3">
            <label asp-for="Vaccine"></label>
            <input asp-for="Vaccine" class="form-control" />
            <span asp-validation-for="Vaccine" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 mb-3">
            <label asp-for="Weight"></label>
            <input asp-for="Weight" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3">
            <label asp-for="Height"></label>
            <input asp-for="Height" class="form-control" />
            <span asp-validation-for="Height" class="text-danger"></span>
        </div>
        <div class="col-md-3 mb-3">
            <label asp-for="BirthDate"></label>
            <input asp-for="BirthDate" type="date" class="form-control" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
        <div class="col-md-3 mb-3">
            <label asp-for="Category"></label>
            <select asp-for="Category" class="form-control" asp-items="Html.GetEnumSelectList<HorsesPOC.Enums.HorseCategory>()"></select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        
    </div>
    =
    <div class="row">
        <div class="col-md-3 mb-3">
            <label asp-for="RideTimeStart"></label>
            <input asp-for="RideTimeStart" type="time" class="form-control" />
            <span asp-validation-for="RideTimeStart" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3">
            <label asp-for="RideTimeEnd"></label>
            <input asp-for="RideTimeEnd" type="time" class="form-control" />
            <span asp-validation-for="RideTimeEnd" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3">
            <label asp-for="StatusAndCondition"></label>
            <input asp-for="StatusAndCondition" class="form-control" />
            <span asp-validation-for="StatusAndCondition" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3">

            <label asp-for="StableID"></label>
            @if (hasStableId)
            {
                <!-- Read-only dropdown -->
                <select asp-for="StableID" class="form-control" asp-items="@(new SelectList(ViewBag.Stables, "ID", "Name", Model.StableID))" disabled></select>
                <!-- Hidden input so value still posts -->
                <input type="hidden" asp-for="StableID" />
            }
            else
            {
                <!-- Normal dropdown -->
                <select asp-for="StableID" class="form-control" asp-items="@(new SelectList(ViewBag.Stables, "ID", "Name"))"></select>
            }
            <span asp-validation-for="StableID" class="text-danger"></span>
        </div>
    </div>
</div>
