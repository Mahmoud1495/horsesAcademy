@model HorsesPOC.Models.Domain.Stable

@{
    ViewData["Title"] = "Delete Stable";
}

<h2 class="mb-3 text-danger">Delete Stable</h2>

<div class="alert alert-warning d-flex align-items-center" role="alert">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    <div>
        This action cannot be undone. Deleting a stable will permanently remove it from the system.
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text mb-1"><strong>Location:</strong> @Model.Location</p>
        @if (Model.Owner != null)
        {
            <p class="card-text mb-1"><strong>Owner:</strong> @Model.Owner.Name</p>
        }

        <form asp-action="DeleteConfirmed" method="post" onsubmit="return confirm('Are you sure you want to delete this stable?');">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ID" />
            <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
